<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#30D5B5"
    tools:context="com.example.tngp17_001.tapper.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/tapper"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4">

        <RelativeLayout
            android:id="@+id/box_out_text"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/box_in_text"
                android:layout_width="match_parent"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="How many tap to win"
                android:background="@null"
                android:layout_height="match_parent" />
        </RelativeLayout>


        <ImageButton
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:id="@+id/playbtn"
            android:src="@drawable/playbtn"
            android:layout_below="@id/box_out_text"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:layout_width="150dp"
            android:layout_height="65dp" />

    </RelativeLayout>

</LinearLayout>
